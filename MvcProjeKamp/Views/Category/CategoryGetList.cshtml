@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CategoryGetList</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <br />
<div>
    <a class="btn btn-info" href="/Category/CategoryAdd">Yeni Kategori</a>
    <br />
    <table class="table table-bordered">
        <tr>
            <td>ID</td>
            <td>İsim</td>
            <td>Açıklama</td>
            <td>Durum</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Status</td>
            </tr>
        }
    </table>
</div>
</body>
</html>
